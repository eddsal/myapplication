<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:backgroundTint="?android:attr/colorSecondary">

    <TextView
            android:text="@string/mixed_fruit_pancakes_n_recipe"
            android:layout_width="193dp"
            android:layout_height="56dp"
            android:id="@+id/textView"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp" android:textAlignment="center" android:textStyle="bold"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back_arrow"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/textView" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.402"
            app:layout_constraintVertical_bias="0.0" android:contentDescription="TODO"/>
    <ImageView
            android:layout_width="283dp"
            android:layout_height="507dp" app:srcCompat="@drawable/recipe_img"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp" app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.085"/>
    <android.support.v7.widget.CardView
            android:layout_width="341dp"
            android:layout_height="208dp"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="@+id/imageView2"
            android:background="@drawable/btn_green"
            app:layout_constraintTop_toTopOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.448"
            android:id="@+id/cardView" android:layout_marginTop="336dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="81dp"
            android:layout_height="41dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/cardView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" app:cardElevation="0dp"
            app:cardCornerRadius="20dp" app:cardBackgroundColor="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.333" app:layout_constraintVertical_bias="0.434"
            android:id="@+id/cardView3">
    </android.support.v7.widget.CardView>
    <ImageView
            android:layout_width="20dp"
                android:layout_height="18dp" app:srcCompat="@drawable/ic_like"
                android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/cardView3" app:layout_constraintBottom_toBottomOf="@+id/cardView3"
            app:layout_constraintVertical_bias="0.565" tools:layout_editor_absoluteX="296dp"/>
    <TextView
            android:text="342"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textColor="@android:color/white" android:textStyle="bold"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/cardView3"
            app:layout_constraintBottom_toBottomOf="@+id/cardView3"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/cardView3"/>
</android.support.constraint.ConstraintLayout>